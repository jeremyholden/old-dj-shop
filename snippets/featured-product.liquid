{% unless settings.home_hero_featprod == blank %}

  {% assign product = all_products[settings.home_hero_featprod] %}

  <div class="grid product-single">
    <div class="product-single__hero large--display-table">

      <div class="grid__item large--one-half large--display-table-cell">
        <h3>{{ 'homepage.sections.featured_product' | t }}</h3>
        <h1>{{ product.title }}</h1>
        <div class="product-description rte" itemprop="description">
          {% if settings.home_hero_featprod_customdescription == true %}
            {{ settings.home_hero_featprod_customdescription_text }}
          {% else %}
            {{ product.description | strip_html | truncatewords: 50 }}
          {% endif %}
        </div>
        <hr class="hr--small hr--clear">
        <a href="{{ product.url }}" class="btn btn--large medium-down--hide">{{ 'products.product.more_info' | t }}</a>
      </div>

      <div class="grid__item large--one-half large--display-table-cell">
        <a href="{{ product.url }}" class="product-single__photos">
          {% assign featured_image = product.featured_image %}
          <img src="{{ featured_image | img_url: '600x600' }}" alt="{{ featured_image.alt | escape }}">
        </a>
      </div>

    </div>
  </div>

{% endunless %}
